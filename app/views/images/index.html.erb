<h1>Images</h1>
<table>
  <thead>
    <tr>
      <th>ID</th>
      <th>Repository</th>
      <th>Tag</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
  <% @images.each do |image| %>
    <tr>
      <td><%= image.id[0..12] %></td>
      <td><%= image.info["Repository"] %></td>
      <td><%= image.info["Tag"] %></td>
      <td><%= links_list link_to('Show', image_path(image.id)) %></td>
    </tr>
  <% end %>
  </tbody>
</table>